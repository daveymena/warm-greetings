generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id         String   @id
  name       String
  email      String?
  phone      String
  address    String?
  idNumber   String   @unique
  idType     String   @default("CC")
  occupation String?
  income     Float?
  references Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  Loan       Loan[]
}

model CompanySettings {
  id                  String   @id @default("company")
  name                String   @default("RapiCrédito")
  description         String   @default("Soluciones financieras rápidas y confiables")
  address             String?
  phone               String?
  email               String?
  website             String?
  logo                String?
  defaultInterestRate Float    @default(15.0)
  minAmount           Float    @default(100000)
  maxAmount           Float    @default(5000000)
  defaultTerm         Int      @default(12)
  maxTerm             Int      @default(36)
  requireGuarantee    Boolean  @default(false)
  autoApproval        Boolean  @default(false)
  autoApprovalLimit   Float    @default(1000000)
  emailNotifications  Boolean  @default(true)
  smsNotifications    Boolean  @default(false)
  paymentReminders    Boolean  @default(true)
  overdueAlerts       Boolean  @default(true)
  newLoanAlerts       Boolean  @default(true)
  updatedAt           DateTime @default(now())
}

model Guarantee {
  id               String   @id
  type             String
  description      String
  value            Float?
  guarantorName    String?
  guarantorPhone   String?
  guarantorAddress String?
  loanId           String
  createdAt        DateTime @default(now())
  Loan             Loan     @relation(fields: [loanId], references: [id])
}

model Loan {
  id             String      @id
  amount         Float
  interestRate   Float
  interestType   String      @default("TOTAL") // TOTAL, MONTHLY, QUINCENAL
  frequency      String      @default("MENSUAL") // DIARIO, SEMANAL, QUINCENAL, MENSUAL
  term           Int
  paymentDay     Int?        // For monthly
  paymentWeekday String?     // For weekly (Lunes, Martes...)
  monthlyPayment Float       // Should probably be renamed to 'installmentAmount' but keeping for compat
  totalAmount    Float
  purpose        String?
  status         String      @default("PENDING")
  approvedAt     DateTime?
  startDate      DateTime?
  endDate        DateTime?
  userId         String?
  clientId       String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @default(now())
  Guarantee      Guarantee[]
  Client         Client      @relation(fields: [clientId], references: [id])
  User           User?       @relation(fields: [userId], references: [id])
  Payment        Payment[]
}

model Payment {
  id          String   @id
  amount      Float
  paymentDate DateTime @default(now())
  dueDate     DateTime
  status      String   @default("PAID")
  paymentType String   @default("MONTHLY")
  notes       String?
  loanId      String
  createdAt   DateTime @default(now())
  Loan        Loan     @relation(fields: [loanId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  address   String?
  avatar    String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Loan      Loan[]
}
